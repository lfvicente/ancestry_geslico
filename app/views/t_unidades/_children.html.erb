<% i=item.depth %>

<% item.children.each do |a| %>    
    <% while i>a.depth %>
        <% i=i-1 %>
        </ul>
    <% end %>
    <% if i<a.depth %>
        <ul class="menu vertical nested submenu is-accordion-submenu" data-submenu >                
        <% i=i+1 %>
    <% end %>

    <li role="treeitem" class="is-accordion-submenu-parent has-submenu-toggle">            
        <%= link_to "#{a.nCodUni} - #{a.cDenominacion}" , organigrama_url(a)  %>         
        
    </li>
    <% if a.nCodUni==10000001 %>             
        <%= render partial: "children", object: a, as: :item %>        
        </ul>
    <% end %>
<% end %>        
